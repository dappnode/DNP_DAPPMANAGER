{
  "name": "@dappnode/dappnode",
  "type": "module",
  "version": "1.0.0",
  "private": true,
  "repository": "git@github.com:dappnode/DNP_DAPPMANAGER.git",
  "license": "GPL-3.0",
  "engines": {
    "node": "20.x"
  },
  "workspaces": [
    "packages/types",
    "packages/ethicalMetrics",
    "packages/params",
    "packages/eventBus",
    "packages/toolkit",
    "packages/common",
    "packages/schemas",
    "packages/utils",
    "packages/logger",
    "packages/dockerCompose",
    "packages/hostScriptsServices",
    "packages/dockerApi",
    "packages/db",
    "packages/httpsPortal",
    "packages/upnpc",
    "packages/chains",
    "packages/installer",
    "packages/dyndns",
    "packages/stakers",
    "packages/daemons",
    "packages/optimism",
    "packages/migrations",
    "packages/dappmanager",
    "packages/admin-ui"
  ],
  "scripts": {
    "build": "yarn workspaces run build",
    "test": "yarn workspaces run --include-workspace-root false test",
    "lint": "yarn workspaces run --include-workspace-root false lint",
    "test:int": "yarn workspaces run --include-workspace-root false test:int",
    "pre-commit": "yarn workspaces run --include-workspace-root false pre-commit",
    "mock-standalone:build": "yarn workspaces run --include-workspace-root false mock-standalone:build",
    "generate": "yarn workspaces run --include-workspace-root false generate",
    "clean": "yarn run clean:build && yarn run clean:libraries",
    "clean:libraries": "rimraf packages/**/node_modules && rimraf node_modules",
    "clean:build": "rimraf packages/**/dist && rimraf packages/**/build"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/chai": "^4.3.11",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.10.4",
    "@typescript-eslint/eslint-plugin": "^5.61.0",
    "@typescript-eslint/parser": "^5.61.0",
    "chai": "^4.3.10",
    "depcheck": "^1.4.7",
    "eslint": "^8.44.0",
    "eslint-config-react-app": "^7.0.1",
    "mocha": "^10.2.0",
    "nodemon": "^3.0.2",
    "rimraf": "^3.0.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
