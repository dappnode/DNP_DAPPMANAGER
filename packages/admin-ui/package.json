    "redux": "^4.0.0",
    "redux-thunk": "^2.3.0",
    "sass": "^1.49.7",
    "semver": "^5.5.0",
    "socket.io-client": "^2.3.0",
    "styled-components": "^4.2.0",
    "swr": "^0.2.0",
