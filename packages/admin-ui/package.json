    "@types/node": "^14.0.4",
    "@types/qrcode.react": "^1.0.0",
    "@types/react": "^16.9.9",
    "@types/react-dom": "^16.9.2",
    "@types/react-redux": "^7.1.5",
    "@types/react-router-dom": "^5.1.0",
    "@types/semver": "^7.1.0",
    "@types/socket.io-client": "^1.4.33",
    "@types/styled-components": "^4.1.19",
    "bootstrap": "^4.3.1",
    "clipboard": "^2.0.1",
    "deepmerge": "^2.1.1",
    "ethereum-blockies-base64": "^1.0.2",
    "is-ipfs": "^0.6.0",
    "lodash": "^4.17.15",
    "mitt": "^2.1.0",
    "pretty-bytes": "^5.3.0",
    "qrcode.react": "^0.8.0",
    "react": "^16.8.5",
    "react-bootstrap": "^1.0.0-beta.5",
    "react-dom": "^16.8.1",
    "react-icons": "^3.5.0",
    "react-markdown": "^8.0.0",
    "react-redux": "^7.2.0",
    "react-router-dom": "^5.0.0",
    "react-scripts": "^5.0.0",
    "react-switch": "^5.0.1",
