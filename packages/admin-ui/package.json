  "devDependencies": {
    "@dappnode/dappmanager": "^0.1.0",
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.6",
    "cookie-session": "^1.4.0",
    "cors": "^2.8.5",
    "eslint-config-prettier": "^4.1.0",
    "eslint-plugin-prettier": "^3.0.1",
    "express": "^4.17.1",
    "nodemon": "^2.0.4",
    "prettier": "^1.16.4"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
