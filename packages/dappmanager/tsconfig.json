{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    /* Modules */
    "types": ["mocha", "node"],

    /* Emit */
    "declaration": false /* TODO: Should be removed when code is fixed */,
    "outDir": "dist",
    "sourceMap": true,

    /* Language and Environment */
    "target": "ES2019",
    "lib": ["ES2020", "ESNext", "ESNext.Promise", "DOM"]
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node",
    "experimentalResolver": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "test/**/*"]
}
