    "dev": "tsc -w",
    "lint": "eslint . --ext .ts --fix src"
  },
  "dependencies": {
    "@dappnode/types": "^0.1.24",
    "@types/node": "^18.11.18",
    "lodash-es": "^4.17.21"
  },
  "devDependencies": {
    "@types/lodash-es": "^4.17.6",
    "@types/node": "^18.11.18",
    "ajv": "6.10.2",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4",
    "typescript-json-schema": "^0.55.0"
  }
}
