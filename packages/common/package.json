{
  "name": "@dappnode/common",
  "type": "module",
  "version": "0.1.0",
  "license": "GPL-3.0",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "build": "yarn run generate && tsc -p tsconfig.json",
