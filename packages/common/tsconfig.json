{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    /* Modules */
    "types": ["node"],

    /* Required for JSON schemas */
    "module": "ESNext",
    "moduleResolution": "node",

    /* Emit */
    "outDir": "dist",

    /* Language and Environment */
    "lib": ["DOM", "ESNext"]
  },
  "ts-node": { "esm": true, "experimentalSpecifierResolution": "node" },
  "include": ["src/**/*", "src/**/*.json"],
  "exclude": ["node_modules", "test/**/*"]
}
