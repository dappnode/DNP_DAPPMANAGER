{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    /* Modules */
    "types": ["node"],
    "typeRoots": ["../../node_modules/@types", "./node_modules/@types"],

    /* Required for JSON schemas */
    "module": "ESNext",
    "moduleResolution": "node",

    /* Emit */
    "outDir": "dist",

    /* Language and Environment */
    "lib": ["DOM", "ESNext"]
  },

  "include": ["src/**/*", "src/**/*.json"],
  "exclude": ["node_modules", "test", "dist"]
}
